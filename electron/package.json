{
  "name": "pareto-ui",
  "version": "0.1.0v3",
  "author": "Michael Pesce",
  "private": true,
  "main": "build/main.js",
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^20.1.3",
    "electron-builder": "^23.3.3",
    "electron-notarize": "^1.2.1"
  },
  "scripts": {
    "build-frontend": "npm --prefix ui run build",
    "replace-frontend-build": "rd build && move ui/build ./build || move ui/build ./build",
    "electron-build-mac": "npm run remove-previous-dist && electron-builder -m || electron-builder -m",
    "electron-build-win": "npm run remove-previous-dist && electron-builder -w || electron-builder -w",
    "start-backend": "cd ../backend/app && uvicorn main:app --reload --host 127.0.0.1 --port 8001",
    "dist:mac": "npm run build-replace-backend && npm run build-frontend && npm run electron-build-mac",
    "dist:win": "npm run build-replace-backend && npm run build-frontend && npm run replace-frontend-build && npm run electron-build-win",
    "build-replace-backend": "npm run remove-previous-backend-build && npm run build-backend || npm run build-backend",
    "build-backend": "cd ../backend/app && pyinstaller -y --clean --distpath ../../electron/py_dist main.spec",
    "remove-previous-backend-build": "rm -r py_dist/*",
    "remove-previous-dist": "rm -r dist/*",
    "app-start": "npm --prefix ui run app-start",
    "electron-start": "npm --prefix ui run electron-start"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "./",
  "build": {
    "appId": "com.electron.pareto-ui",
    "extends": null,
    "asar": false,
    "productName": "ParetoUI",
    "afterSign": "build/notarize.js",
    "files": [
      "py_dist/**/*",
      "dist/**/*",
      "build/**/*",
      "package.json",
      "backend/**/*",
      "images/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      "public/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "utilities",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.inherit.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "icon": "build/pareto-logo.ico"
    },
    "win": {
      "target": "zip",
      "icon": "build/pareto-logo.ico"
    },
    "linux": {
      "target": "deb",
      "category": "Development"
    }
  }
}
